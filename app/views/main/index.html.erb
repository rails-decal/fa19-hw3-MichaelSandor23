<h1>Hello <%= @name%></h1>

<%= form_with local: true, method: "get" do |form| %>
  <%= form.text_field :city %>
  <%= form.submit %>
<% end %>

<% City.all().each do |cityName, city| %>
  <% if not city.nil? %>
    <h3><%= city.name %></h3>
    <p><%= city.weather[:temperature] %><p>
    <p><%= city.weather[:description] %><p>
  <% end %>
<% end %>
